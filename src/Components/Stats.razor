@implements IDisposable
@inject StateContainer StateContainer

<div class="mt-4">
    <div class="row">
        <div class="col text-muted text-center">
            Work <span class="badge bg-dark text-light">@StateContainer.WorkDuration</span> @(StateContainer.IsWorkDurationHours ? "hours" : "minutes")
        </div>
    </div>
    <div class="row">
        <div class="col text-muted text-center">
            <span class="badge bg-dark text-light">@StateContainer.BreakDuration</span> @(StateContainer.IsBreakDurationHours ? "hour" : "minute") break
        </div>
    </div>
</div>

@code {
    public void Dispose()
    {
        StateContainer.OnChange -= StateHasChanged;
    }

    protected override void OnInitialized()
    {
        StateContainer.OnChange += StateHasChanged;
    }
}
